#! /bin/sh

cd /opt/package_virome

find . -exec grep -l NODISTRIB {} \; > /tmp/tom 2> /dev/null

for i in `cat /tmp/tom`
do
	sed -i -e 's/^\$;NODISTRIB$;.*/$;NODISTRIB$; = 1/' $i
done

find . -exec grep -l /diag/projects/virome {} \; > /tmp/tom 2> /dev/null
for i in `cat /tmp/tom`
do
	sed -i -e 's/\/diag\/projects\/virome\/package_virome/\/opt\/package_virome/' $i
	sed -i -e 's/\/diag\/projects\/virome/\/opt\/projects\/virome/' $i
done

